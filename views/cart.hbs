<h1>Cart</h1>

<div id='cart'>
  {{#if courses.length}}
    <table>
      <thead>
        <tr>
          <th>Course</th>
          <th>Q-ty</th>
          <th>Change</th>
        </tr>
      </thead>
      <tbody>
        {{#each courses}}
          <tr>
            <td>{{title}}</td>
            <td>{{count}}</td>
            <td>
              <button
                class='btn btn-small purple darken-4 js-remove'
                data-id='{{id}}'
                data-csrf='{{@root.csrf}}''
              >Delete</button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    <p><strong> Total price: </strong> <span class='price'>{{price}}</span></p>
    <form action='/orders' method='POST'>
      <button type='submit' class='btn pink darken-3'>Finish order</button>
      <input type='hidden' name='_csrf' value='{{csrf}}' />

    </form>

  {{else}}
    <p>Your cart is empty</p>
  {{/if}}

</div>