<h1>My orders</h1>
<div>
  {{#if orders.length}}
    {{#each orders}}
      <div class='cards-my'>
        <div class='card'>
          <div class='card-content'>
            <span class='card-title'>
              Order:
              <small>{{_id}}</small>
            </span>
            <p class='date'>Date: {{date}}</p>
            <p><em>{{user.userId.name}} </em>({{user.userId.email}})</p>
            <ol>
              {{#each courses}}
                <li>
                  {{course.title}}
                  ( x
                  <strong>{{count}}</strong>)
                </li>
              {{/each}}
            </ol>
            <hr />
            <p>Price: <span class='price'>{{price}}</span> </p>
          </div>
        </div>

      </div>

    {{/each}}
  {{else}}
    <p>Here is no Orders yet </p>
  {{/if}}
</div>